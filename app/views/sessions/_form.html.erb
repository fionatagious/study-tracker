<%= form_with(model: session, local: true) do |form| %>
  <% if session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
        <% session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :language %><br/>
    <%= form.text_field :language %>
  </div>

  <div class="field">
    <%= form.label :project %><br/>
    <%= form.text_field :project %>
  </div>

  <div class="field">
    <%= form.label :minutes %><br/>
    <% if params.has_key?(:minutes) %>
      <%= form.text_field :minutes, :value => params[:minutes].to_s %>
    <% else %>
      <%= form.text_field :minutes %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :buddies %><br/>
